                    <thead>
                        <tr>
                            <th class="data-table">Data</th>
                            <th class="descricao-table">Descrição</th>
                            <th class="observacao-table">Observação</th>
                            <th class="valor-table">Valor</th>
                            <th class="documento-table">Doc.</th>
                        </tr>
                    </thead>
                </table>
