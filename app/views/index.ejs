            </section>
            <aside class="lancamento-despesa">

                <h1 class="titulo-lancamento">Lançamento</h1>

                <form class="conteiner-from" id="form-lancamento">
                    <div class="form-group">
                        <label class="label-input" for="input-descricao-lancamento">Descrição</label><br>
                        <input class="input-lancamento" type="text" id="input-descricao-lancamento" name="descricao" maxlength="20" value="Energia nuclear" required>
                    </div>

                    <div class="conteiner-data-valor-comprovante">
                        <div class="conteiner-data-valor">
                            <div class="form-group">
                                <label class="label-input" for="input-data-lancamento">Data</label><br>
                                <input class="input-lancamento" type="date" id="input-data-lancamento" name="data" placeholder="DD/MM/YYYY" maxlength="10" value="2021-10-13" required>
                            </div>
                            <div class="form-group">
                                <label class="label-input" for="input-valor-lancamento">Valor</label><br>
                                <input class="input-lancamento" type="number" step="0.01" id="input-valor-lancamento" name="valor" maxlength="10" value="23.50" required>
                            </div>
                        </div>
                        <div class="conteiner-comprovante">
                            <div class="form-group">
                                <input type="file" id="input-comprovante-lancamento" name="comprovante">
                                <div class="input-comprovante-lancamento-estilizado">
                                    <div class="upload-borda-pontilhada">
                                        <p>Insira um comprovante</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="label-input" for="input-observacao-lancamento">Observação</label><br>
                        <textarea class="input-lancamento" id="input-observacao-lancamento" name="observacao"></textarea>
                    </div>

                    <div class="conteiner-btn-submit">
                        <button class="btn-submit-lancamento" type="submit">Salvar</button>
                    </div>
                </form>
            </aside>
        </main>
